.overflow {
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
width: 100%;
}

.content {
display: flex;
width: 100%;
position: absolute;
bottom: 0rpx;
left: 0;
top: 120rpx;
overflow: hidden;
}
.menu-container {
width: 200rpx;
flex: 0 0 260rpx;
background: #f6f6f6;
}
.detail-container {
flex: 1;
height: 100%;
overflow: auto
}

.scroll-view {
width: 100%;
height: 100%;
}
.scroll-view-ul {
width: 100%;
height: 100%;
}
.scroll-view-item {
height: 110rpx;
width: 100%;
font-size: 24rpx;
color: #4b4c4c;
border-left: 8rpx solid transparent;
display: flex;
align-items: center;
justify-content: center;
position: relative;
}
.scroll-view-item:after {
content: '';
left: 0;
right: 0;
bottom: 0;
height: 1px;
background-color: #dfdfdf;
transform: scaleY(0.5);
position: absolute;
}
.active {
background: #ffffff;
color: #66CDAA;
border-left: 8rpx solid #66CDAA;
}



.market-scroll-list {
height: 100%;
}
.title {
height: 55rpx;
background-color: #f6f6f6;
border-left: 6rpx solid #dfdfdf;
padding-left: 25rpx;
line-height: 55rpx;
}
.inner {
display: flex;
padding: 10rpx;
position: relative;

}
.inner:after {
  content: '';
  left: 20rpx;
  right: 0;
  bottom: 0;
  height: 3px;
  background-color: #dfdfdf;
  transform: scaleY(0.5);
  position: absolute;
}
.cover {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #dfdfdf;
  background: #f6f6f6;
  padding: 20rpx;

}
.cover-img {
    width: 100%;
    height: 100%;
    background-color: #66CDAA;
}
.info {
  flex: 1;
  padding: 0 30rpx;
  font-size: 0;
  
}
.info-title {
    color: #333;
    font-size: 34rpx;
    line-height: 130rpx;
    padding-left: 20rpx;
    text-align:left;
}
.info-subtitle {
    color: #999999;
    font-size: 20rpx;
    margin-top: -3rpx;
}
.info-desc {
    color: #666666;
    font-size: 22rpx;
    margin-top: 5rpx;
}
.num {
  width: 120rpx;
  position: relative;
}
.text {
    position: absolute;
    bottom: 0;
    font-size: 22rpx;
    color: #666;
}
.tag-list{
  margin-top:20rpx;
  margin-left:60rpx;
  margin-right:60rpx;
  margin-bottom:20rpx;
  display: flex;
  justify-content: space-between;
  
}
.tag-view{
  
    display:flex;
    padding:10rpx;
  flex-direction:column;
    font-family:黑体;
  color:#4b4c4c;
  font-size:30rpx
}
.on{
  border-bottom: 2px solid #59c9b9;
}

.t-on{
  color:#59c9b9;
}