.df{
  display:flex;
  align-items: center;
  border-top:1px solid #999;
  padding-top:20rpx 
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top:60rpx;
  height:340rpx;
  z-index: 9999;
  background: #f9f9f9;
  left:75rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
  display:flex;
  align-items: center
}

.modal-content-sub {
  padding: 10rpx 32rpx;
  display:flex;
  align-items: center
}

.modal-input {

  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 300rpx;
  height: 62rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  display: inline-block;
  color: #333;
    background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  margin-left:50rpx
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}