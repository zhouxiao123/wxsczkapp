    <text class="userinfo-text"><text>{{province}}</text> | <text>{{userType}}</text></text>
    <image bindtap="signUpIndex" src="../../images/personal/q-d@2x.png" style="margin-top:20rpx;width:170rpx;height:60rpx"/>
  </view>

