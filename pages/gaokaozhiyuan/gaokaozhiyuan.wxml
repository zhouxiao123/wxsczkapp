  <image animation="{{animationData}}" src="/images/1.jpg" style="width:750rpx;" mode='widthFix' bindload="imageLoad"></image>
  <image animation="{{animationData}}" src="/images/2.jpg" style="width:750rpx" mode='widthFix'></image>
    <image animation="{{animationData}}" src="/images/3.jpg" style="width:750rpx" mode='widthFix'></image>
